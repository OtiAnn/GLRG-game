<div class="game-play">
<%= form_for @post, url: polymorphic_path(@post, anchor: 'menubar')  do |f| %>
  <div>
    <img src="https://dl.dropboxusercontent.com/u/44654998/gglab/arrowright.png"/><span><%= f.label :"文章標題" %></span><br><br>
    <%= f.text_field :title %>
  </div>
  <br />
  <div>
    <img src="https://dl.dropboxusercontent.com/u/44654998/gglab/arrowright.png"/><span><%= f.label :"上傳圖片" %></span><br><br>
    <%= f.file_field :picture, :class => "upload" %>
  </div>
  <br />
  <div class="submit">
    <%= f.submit :"送出", :class => "btn" %>
  </div>
<% end %>
</div>