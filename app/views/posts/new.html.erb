<div class="game-play">
<h3>新增題目</h3>

<%= render 'form' %>

<hr>
<h3>目前所有題目</h3>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>題目</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @sorted_posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= link_to '看看', post_path(post) + '#menubar' %></td>
        <td><%= link_to '編輯', edit_post_path(post) + '#menubar' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
